<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_5dp"
    android:layout_marginBottom="@dimen/_10dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/createdAt"
                android:textSize="17sp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5dp"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                tools:text=""
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginRight="@dimen/_5dp"
                android:maxLines="1"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="======================================================"
                />




            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paymentTime"
                android:textSize="17sp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginLeft="@dimen/_5dp"
                tools:text="Payment time"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="17sp"
                android:text="Description:"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_80dp"
                android:textStyle="bold"
                android:id="@+id/description"
                android:layout_marginRight="@dimen/_15dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                tools:text="Money for paracetamol and for also surgery"
                />










            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    tools:text="Price"
                    />


                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#00bbff"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_15dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_height="40dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:text="Pay"
                        android:background="#00bbff"
                        android:textColor="#ffffff"
                        android:id="@+id/pay"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/payType"
                android:visibility="gone"
                android:gravity="right"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_height="wrap_content">




                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Cash"
                    android:id="@+id/cash"
                    android:layout_marginRight="@dimen/_10dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Transfer"
                    android:id="@+id/transfer"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="Wallet"
                    android:id="@+id/wallet"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_height="wrap_content"/>



            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/waiting"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_10dp"
                android:text="Waiting for medic to confirm cash payment"
                android:layout_height="wrap_content"/>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginBottom="@dimen/_20dp"
                android:maxLines="1"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="======================================================"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>






    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:visibility="gone"
        android:textSize="17sp"
        android:layout_marginRight="@dimen/_40dp"
        android:layout_marginLeft="@dimen/_40dp"
        android:background="@color/main_color"
        android:text="Pay"
        />







</androidx.appcompat.widget.LinearLayoutCompat>